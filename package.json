{
  "name": "recipe-easy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:cf": "wrangler dev --local --compatibility-date=2024-03-20 --port 8787",
    "build": "next build",
    "build:cf": "next build && npx @cloudflare/next-on-pages --outdir dist",
    "start": "next start",
    "lint": "next lint",
    "check-compatibility": "node scripts/check-compatibility.js",
    "db:query": "wrangler d1 execute recipe-easy-db --remote --command",
    "db:backup": "wrangler d1 export recipe-easy-db --remote --output=db-backup/remote.sql",
    "db:migrate": "wrangler d1 migrations apply recipe-easy-db --remote",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:worker": "wrangler deploy",
    "deploy:cf": "npm run build:cf && wrangler pages deploy dist --project-name=recipe-easy-frontend",
    "versions:upload": "wrangler versions upload",
    "indexnow": "node scripts/submit-indexnow.js",
    "indexnow:submit": "node scripts/submit-indexnow.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.0",
    "@tailwindcss/postcss": "^4.1.12",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "esbuild": "0.14.47",
    "lucide-react": "^0.539.0",
    "next": "^15.4.6",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "openai": "^5.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.52.2",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.13",
    "@cloudflare/workers-types": "^4.20250816.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "15.1.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5",
    "wrangler": "^3.95.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie <= 11"
  ]
}
