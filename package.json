{
  "name": "recipe-easy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:cf": "wrangler dev --local --compatibility-date=2024-03-20 --port 8787",
    "build": "next build",
    "build:cf": "next build && npx @cloudflare/next-on-pages",
    "start": "next start",
    "lint": "next lint",
    "db:query": "wrangler d1 execute recipe-easy-db --remote --command",
    "db:backup": "wrangler d1 export recipe-easy-db --remote --output=db-backup/remote.sql",
    "db:migrate": "wrangler d1 migrations apply recipe-easy-db --remote",
    "deploy": "wrangler deploy",
    "deploy:cf": "npm run build:cf && wrangler pages deploy .vercel/output/static --project-name=recipe-easy-frontend"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.52.0",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.383.0",
    "next": "^14.2.3",
    "next-intl": "^4.3.4",
    "next-themes": "^0.3.0",
    "openai": "^5.10.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.2",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.13",
    "@cloudflare/workers-types": "^4.20250730.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wrangler": "^4.26.1"
  }
}
